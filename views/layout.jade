        //script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular-route.min.js')
        script(src='/javascripts/angular.min.js')
        script(src='/javascripts/angular-route.min.js')

        script(src='/javascripts/ngStorage.js')
        script(src='/javascripts/loading-bar.js')
