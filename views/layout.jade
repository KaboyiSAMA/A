doctype html
html(ng-app='imp')
    head
        title= title
        script(src='javascripts/imp.js')
        link(rel='stylesheet' href='stylesheets/bootstrap.min.css')
        link(rel='stylesheet', href='stylesheets/style.css')
        link(rel='stylesheet', href='stylesheets/loading-bar.css')
        //link(rel='stylesheet' href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css')
        script(src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js")
        script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")
    body(ng-app='DRCtrl')
        div.navbar.navbar-inverse.navbar-fixed-top
            div.container
                div.navbar-header
                    a.navbar-brand= title
                div.navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li
                            a(ng-href='#/') 主
                        li(data-ng-show='token')
                            a(ng-href='#/me') 我
                        li(data-ng-hide='token')
                            a(ng-href='#/signin') 注册
                        li(data-ng-hide='token')
                            a(ng-href='#/signup') 登录
                        li(data-ng-show='token')
                            a(ng-href='logout()') 登出
            div.container
                block content
        //block script
        script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
        script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular.min.js')
        script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular.min.js')
        script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular-route.min.js')
        script(src='/public/javascripts/ngStorage.js')
        script(src='/public/javascripts/loading-bar.js')
        script(src='')
