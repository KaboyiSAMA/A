extends layout
block script
    script(src='javascripts/Sortable.js')
    script(lang='javascript').
        Sortable.create(sortList,{})
        Sortable.create(listWithHandle,{
            handle:'.glyphicon-move',
            animation:150
        })
block content
    h1= title
    p Welcome to #{title}
    #sortList.list-group
        .list-group-item This is a a(href='/So') Sortable
        .list-group-item It works with Bootstrap...
        .list-group-item ... out of the box.
        .list-group-item It has support for touch device
        .list-group-item Just drag some elements around.
    #listWithHandle.list-group
        .list-group-item
            span.badge 15
            span.glyphicon.glyphicon-move(aria-hidden='true') &nbsp;Drag me by the handle
        .list-group-item
            span.badge 11
            span.glyphicon.glyphicon-move(aria-hidden='true') &nbsp;You can also select me text)
        .list-group-item
            span.badge 1
            span.glyphicon.glyphicon-move(aria-hidden='true') &nbsp;Best of both worlds!